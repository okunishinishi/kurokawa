extends ../layout

block stylesheets
    link(rel='stylesheet', href=url.css('chart.css'))

block javascripts
    script(src=url.js('p.chart.js'))

block left-content
    - var key,sheet_keys='department,post,mission,birthday,birthplace,graduated_from,years_of_service,join_year,hobbyhobby'.split(',')
    h1.page-title=company.name
    br

    table#sheet-table
        thead
            tr
                th
                each key in sheet_keys
                    th=key

        tbody
            each person in persons
                tr
                    th
                        a(href=url("/person/#{person._id}"))=person.name
                    for key in sheet_keys
                        td=person[key]