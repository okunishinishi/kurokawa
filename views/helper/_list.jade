section.list-section#helper-list-section
    form#helper-list-form.positioned.block-list-header(
    data-role='search-form',action=url('/api/helper.json'),method='get')
        label.float-left.block-list-title=l.lbl.helper
        input(type='search', name='search_word', results).float-right
        input(type='hidden', name='skip', value='0')
        input(type='hidden', name='limit', value='500')
        input.btn(type='submit')=l.lbl.search
        br.clear
    ul#helper_list.block-list


    a.add-btn.wide-btn#helper-add-btn(
    href='javascript:void(0)', data-role='add-btn')
        | #{l.btn.new}